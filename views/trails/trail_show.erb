<div id="trail_page">
  <div class="trail_index">

 <head>
  
  <title>Running Trails</title>


<h2><%= @trail.trail_name %> Review</h2>

<% @trail.users.each do |u| %>
  <%= u.name %><br>
<% end %>


<a href="/trails/<%= @trail.id %>/edit">Edit this trail's name.</a>
<p>
<% @trail.reviews.each do |review| %>
  <li><%= review.content %></li>
<% end %>
</p>

<!-- adds pop up picture when user clicks on link for it, greying out background -->
<a href="#" id="modal_link">See trail photo.</a>

<div id="modal_content">
    <p><a href="#" id="close_modal">Close</a>
    <img src="/images/Zorinsky.jpg" alt="Zorinsky"> </p>
  </div>
 
<!--  user can click on the overlay background and it will close the picture -->
  <div id="overlay"></div>

<!-- Google map -->
<p><iframe src="https://www.google.com/maps/embed?pb=!1m24!1m12!1m3!1d191858.01803470103!2d-96.08124855000001!3d41.29185894999998!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!4m9!1i0!3e6!4m0!4m5!1s0x87938dc8b50cfced%3A0x46424d4fae37b604!2sOmaha%2C+NE!3m2!1d41.2523634!2d-95.99798829999999!5e0!3m2!1sen!2sus!4v1410123630899" width="400" height="300" frameborder="0" style="border:0"></iframe></p>

<h3>New Review</h3>

 <form action="/users/<%= @user.id %>/create_review" method="post">  
  
   <p>Content: <input type="text" name="content"></p>
    
   <input type="submit">
 </form>

    <h4>The current weather for Omaha, NE:</h4>
      <li><%=@forecast.minutely.summary%></li>
      <li>The temperature is <%=@forecast.currently.temperature%> degrees Fahrenheit</li>
      <li>The relative humidity is <%=@forecast.currently.humidity*100%>%</li>
      <li>There is <%=@forecast.currently.precipProbability*100%>% chance of rain</li>
      
    </div>
    
    <!-- Forecast io widget -->
    <div id="forecast">
    <iframe id="forecast_embed" type="text/html" frameborder="0" height="245" width="100%" src="http://forecast.io/embed/#lat=41.2586100&lon=-95.9377900&name= Omaha"> </iframe>
  </div>
</div>